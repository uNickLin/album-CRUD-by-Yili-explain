<% if @photo.errors.any? %>
	<h2>We have some errors here !!</h2>
	<ul>
		<% @photo.errors.full_messages.each do |msg| %>
			<li><%= msg %></li>
		<% end %>
	</ul>
<% end %>


<%= form_for @photo do |f| %>
	<%= f.label :title, "Title : " %>
	<%= f.text_field :title %>
	<br>
	<%= f.label :date, "Date : " %>
	<%= f.text_field :date %>
	<br>
	<%= f.label :description, "Description : " %>
	<br>
	<%= f.text_area :description %>
	<br>
	<%= f.label :file_location, "File location : " %>
	<%= f.file_field :file_location %>
	<br>	
	<%= f.submit %>

<% end %>


<p><%= link_to 'BACK', photos_path %></p>